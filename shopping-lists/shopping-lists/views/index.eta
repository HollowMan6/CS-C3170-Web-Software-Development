<% layout("./layouts/layout.eta") %>
<h1>Shared shopping lists</h1>
<% if (Number(it.lists_num) !== 0) { %>
<p>Statistic:</p>
<ul>
  <li>Shopping lists: <%= it.lists_num %></li>
  <li>Shopping list items: <%= it.items_num %></li>
</ul>
<% } else { %>
<p>No shopping lists yet.</p>
<% } %>

<a href="/lists">List</a>
